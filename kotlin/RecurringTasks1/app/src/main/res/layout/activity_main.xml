<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Data With Timer" />

        <Button
            android:id="@+id/btn_count_down_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Data With Count Down Timer" />

        <Button
            android:id="@+id/btn_handler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Data With Handler" />

        <Button
            android:id="@+id/btn_scheduled_thread_pool_executor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Data With Executor" />

        <Button
            android:id="@+id/btn_observable_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Data With Observable Interval" />

        <Button
            android:id="@+id/btn_observable_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Data With Observable Timer" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            tools:text="Hello World!" />
    </LinearLayout>
</ScrollView>